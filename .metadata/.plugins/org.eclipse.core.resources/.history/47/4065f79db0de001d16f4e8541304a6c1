		frmEutechStudentReporting.getContentPane().add(btnSaveReport_1_2);
		
		JButton btnSaveReport_1_3 = new JButton("Thursday");
		springLayout.putConstraint(SpringLayout.NORTH, btnSaveReport_1_3, 178, SpringLayout.SOUTH, nameField);
		springLayout.putConstraint(SpringLayout.WEST, btnSaveReport_1_3, 26, SpringLayout.EAST, btnSaveReport_1_2);
		springLayout.putConstraint(SpringLayout.SOUTH, btnSaveReport_1_3, -161, SpringLayout.SOUTH, frmEutechStudentReporting.getContentPane());
		btnSaveReport_1_3.setForeground(Color.WHITE);
		btnSaveReport_1_3.setFont(new Font("Tahoma", Font.BOLD, 12));

public class appMainWindow {

	private JFrame frmEutechStudentReporting;
	private JTextField nameField;

	/**
	 * Launch the application.
	 */
	public static void main(String[] args) {
		EventQueue.invokeLater(new Runnable() {
			public void run() {
				try {
					appMainWindow window = new appMainWindow();
					window.frmEutechStudentReporting.setVisible(true);
				} catch (Exception e) {
					e.printStackTrace();
				}
			}
		});
	}

	/**
	 * Create the application.
	 */
	public appMainWindow() {
		initialize();
	}

	/**
	 * Initialize the contents of the frame.
	 */
	private void initialize() {
		frmEutechStudentReporting = new JFrame();
		frmEutechStudentReporting.getContentPane().setBounds(new Rectangle(5, 0, 0, 0));
		frmEutechStudentReporting.getContentPane().setBackground(SystemColor.activeCaption);
		frmEutechStudentReporting.setTitle("EUTech Student Reporting Tool");
		frmEutechStudentReporting.setIconImage(Toolkit.getDefaultToolkit().getImage(appMainWindow.class.getResource("/ALPHAV01/EuTech_logo.png")));
		frmEutechStudentReporting.setBounds(100, 100, 850, 550);
		frmEutechStudentReporting.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		SpringLayout springLayout = new SpringLayout();
		frmEutechStudentReporting.getContentPane().setLayout(springLayout);
		Dimension dim = Toolkit.getDefaultToolkit().getScreenSize();
		frmEutechStudentReporting.getContentPane().setLocation(dim.width/2-frmEutechStudentReporting.getContentPane().getSize().width/2, dim.height/2-frmEutechStudentReporting.getContentPane().getSize().height/2);
		
		JLabel lblNewLabel = new JLabel("Enter your name and surname(s):");
		springLayout.putConstraint(SpringLayout.NORTH, lblNewLabel, 30, SpringLayout.NORTH, frmEutechStudentReporting.getContentPane());
		springLayout.putConstraint(SpringLayout.EAST, lblNewLabel, -275, SpringLayout.EAST, frmEutechStudentReporting.getContentPane());
		lblNewLabel.setFont(new Font("Tahoma", Font.PLAIN, 17));
		frmEutechStudentReporting.getContentPane().add(lblNewLabel);
		
		nameField = new RoundedJTextField(1);
		springLayout.putConstraint(SpringLayout.EAST, nameField, 0, SpringLayout.EAST, lblNewLabel);
		lblNewLabel.setLabelFor(nameField);
		nameField.setHorizontalAlignment(JTextField.CENTER);
		springLayout.putConstraint(SpringLayout.SOUTH, nameField, 53, SpringLayout.SOUTH, lblNewLabel);
		nameField.setFont(new Font("Tahoma", Font.PLAIN, 15));
		PromptSupport.setPrompt("Enter your name and surname here", nameField);
		springLayout.putConstraint(SpringLayout.NORTH, nameField, 17, SpringLayout.SOUTH, lblNewLabel);
		springLayout.putConstraint(SpringLayout.WEST, nameField, 0, SpringLayout.WEST, lblNewLabel);
		frmEutechStudentReporting.getContentPane().add(nameField);
		nameField.setColumns(10);
		
		JButton btnSaveReport = new JButton("Save Report");
		springLayout.putConstraint(SpringLayout.NORTH, btnSaveReport, -47, SpringLayout.SOUTH, frmEutechStudentReporting.getContentPane());
		springLayout.putConstraint(SpringLayout.WEST, btnSaveReport, 684, SpringLayout.WEST, frmEutechStudentReporting.getContentPane());
		springLayout.putConstraint(SpringLayout.SOUTH, btnSaveReport, -10, SpringLayout.SOUTH, frmEutechStudentReporting.getContentPane());
		btnSaveReport.setActionCommand("Save Report");
		btnSaveReport.setBackground(new Color(59, 89, 182));
		btnSaveReport.setForeground(Color.WHITE);
		btnSaveReport.setFocusPainted(false);
		btnSaveReport.setFont(new Font("Tahoma", Font.BOLD, 12));
		frmEutechStudentReporting.getContentPane().add(btnSaveReport);
		
		JScrollBar scrollbar = new JScrollBar();
		springLayout.putConstraint(SpringLayout.EAST, btnSaveReport, -10, SpringLayout.WEST, scrollbar);
		springLayout.putConstraint(SpringLayout.SOUTH, scrollbar, 0, SpringLayout.SOUTH, frmEutechStudentReporting.getContentPane());
		scrollbar.setPreferredSize(new Dimension(17, 513));
		springLayout.putConstraint(SpringLayout.NORTH, scrollbar, 0, SpringLayout.NORTH, frmEutechStudentReporting.getContentPane());
		springLayout.putConstraint(SpringLayout.EAST, scrollbar, 0, SpringLayout.EAST, frmEutechStudentReporting.getContentPane());
		scrollbar.setBounds(200, 150, 150, frmEutechStudentReporting.getHeight());
		frmEutechStudentReporting.getContentPane().add(scrollbar);
		
		JButton btnMonday = new JButton("Monday");
		springLayout.putConstraint(SpringLayout.NORTH, btnMonday, 282, SpringLayout.NORTH, frmEutechStudentReporting.getContentPane());
		springLayout.putConstraint(SpringLayout.WEST, btnMonday, 26, SpringLayout.WEST, frmEutechStudentReporting.getContentPane());
		springLayout.putConstraint(SpringLayout.SOUTH, btnMonday, -161, SpringLayout.SOUTH, frmEutechStudentReporting.getContentPane());
		springLayout.putConstraint(SpringLayout.EAST, btnMonday, -675, SpringLayout.EAST, frmEutechStudentReporting.getContentPane());
		btnMonday.setForeground(Color.WHITE);
		btnMonday.setFont(new Font("Tahoma", Font.BOLD, 12));
		btnMonday.setFocusPainted(false);
		btnMonday.setBackground(new Color(59, 89, 182));
		btnMonday.setActionCommand("Save Report");
		frmEutechStudentReporting.getContentPane().add(btnMonday);
		
		JButton btnSaveReport_1_1 = new JButton("Tuesday");
		springLayout.putConstraint(SpringLayout.NORTH, btnSaveReport_1_1, 178, SpringLayout.SOUTH, nameField);
		springLayout.putConstraint(SpringLayout.WEST, btnSaveReport_1_1, 26, SpringLayout.EAST, btnMonday);
		springLayout.putConstraint(SpringLayout.SOUTH, btnSaveReport_1_1, -161, SpringLayout.SOUTH, frmEutechStudentReporting.getContentPane());
		springLayout.putConstraint(SpringLayout.EAST, btnSaveReport_1_1, -514, SpringLayout.EAST, frmEutechStudentReporting.getContentPane());
		btnSaveReport_1_1.setForeground(Color.WHITE);
		btnSaveReport_1_1.setFont(new Font("Tahoma", Font.BOLD, 12));
		btnSaveReport_1_1.setFocusPainted(false);
		btnSaveReport_1_1.setBackground(new Color(59, 89, 182));
		btnSaveReport_1_1.setActionCommand("Save Report");
		frmEutechStudentReporting.getContentPane().add(btnSaveReport_1_1);
		
		JButton btnSaveReport_1_2 = new JButton("Wednesday");
		springLayout.putConstraint(SpringLayout.NORTH, btnSaveReport_1_2, 178, SpringLayout.SOUTH, nameField);
		springLayout.putConstraint(SpringLayout.WEST, btnSaveReport_1_2, 26, SpringLayout.EAST, btnSaveReport_1_1);
		springLayout.putConstraint(SpringLayout.SOUTH, btnSaveReport_1_2, -161, SpringLayout.SOUTH, frmEutechStudentReporting.getContentPane());
		springLayout.putConstraint(SpringLayout.EAST, btnSaveReport_1_2, -353, SpringLayout.EAST, frmEutechStudentReporting.getContentPane());
		btnSaveReport_1_2.setForeground(Color.WHITE);

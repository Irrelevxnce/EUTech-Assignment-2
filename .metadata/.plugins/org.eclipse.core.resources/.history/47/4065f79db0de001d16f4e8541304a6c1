		springLayout.putConstraint(SpringLayout.EAST, btnSaveReport_1_3, -26, SpringLayout.WEST, btnSaveReport_1_4);
		springLayout.putConstraint(SpringLayout.NORTH, btnSaveReport_1_4, 282, SpringLayout.NORTH, frmEutechStudentReporting.getContentPane());

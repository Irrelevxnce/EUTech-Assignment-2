package ALPHAV01;

import java.awt.EventQueue;

import javax.swing.JComponent;
import javax.swing.JFrame;
import java.awt.Color;
import java.awt.Dimension;
import java.awt.Toolkit;
import javax.swing.JLabel;
import java.awt.BorderLayout;
import javax.swing.SwingConstants;
import javax.swing.border.Border;
import javax.swing.border.CompoundBorder;
import javax.swing.border.EmptyBorder;

import java.awt.Font;
import javax.swing.JTextField;
import javax.swing.JPanel;
import org.jdesktop.swingx.*;
import org.jdesktop.swingx.prompt.PromptSupport;

import com.jhlabs.*;
import org.jdesktop.swingworker.*;

public class mainAppWindow {

	private JFrame frmEutechStudentReporting;
	private JPanel panel;
	private JTextField textField;

	/**
	 * Launch the application.
	 */
	public static void main(String[] args) {
		EventQueue.invokeLater(new Runnable() {
			public void run() {
				try {
					mainAppWindow window = new mainAppWindow();
					window.frmEutechStudentReporting.setVisible(true);
				} catch (Exception e) {
					e.printStackTrace();
				}
			}
		});
	}

	/**
	 * Create the application.
	 */
	public mainAppWindow() {
		initialize();
	}

	/**
	 * Initialize the contents of the frame.
	 */
	private void initialize() {
		frmEutechStudentReporting = new JFrame();
		frmEutechStudentReporting.setTitle("EUTech Student Reporting Tool");
		frmEutechStudentReporting.setIconImage(Toolkit.getDefaultToolkit().getImage(mainAppWindow.class.getResource("/ALPHAV01/EuTech_logo.png")));
		frmEutechStudentReporting.setBackground(new Color(172, 196, 249));
		frmEutechStudentReporting.setBounds(100, 100, 400, 300);
		frmEutechStudentReporting.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		
		JLabel lblFullName = new JLabel("Full name:");
		lblFullName.setFont(new Font("Tahoma", Font.PLAIN, 16));
		lblFullName.setHorizontalAlignment(SwingConstants.CENTER);
		Border border = lblFullName.getBorder();
	    Border margin = new EmptyBorder(10,10,10,10);
	    lblFullName.setBorder(new CompoundBorder(border, margin));
		frmEutechStudentReporting.getContentPane().add(lblFullName, BorderLayout.NORTH);
		
		panel = new JPanel();
		panel.setLayout(null);
		frmEutechStudentReporting.getContentPane().add(panel, BorderLayout.CENTER);
		panel.setSize(frmEutechStudentReporting.getWidth(), 100);
		
		textField = new JTextField();
		lblFullName.setLabelFor(textField);
		textField.setEnabled(true);
		PromptSupport.setPrompt("Enter your name and surnames", textField);
		panel.add(textField);
		textField.setColumns(10);
	}

}
